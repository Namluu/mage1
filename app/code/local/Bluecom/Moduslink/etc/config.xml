<?xml version="1.0"?>
<config>
    <modules>
        <Bluecom_Moduslink>
            <version>0.1.0</version>
        </Bluecom_Moduslink>
    </modules>

    <global>
        <fieldsets>
            <sales_convert_quote_payment>
                <moduslink_data>
                    <to_order_payment>*</to_order_payment>
                </moduslink_data>
            </sales_convert_quote_payment>
        </fieldsets>

        <helpers>
            <bluecom_moduslink>
                <class>Bluecom_Moduslink_Helper</class>
            </bluecom_moduslink>
        </helpers>

        <models>
            <bluecom_moduslink>
                <class>Bluecom_Moduslink_Model</class>
            </bluecom_moduslink>
        </models>

        <blocks>
            <bluecom_moduslink>
                <class>Bluecom_Moduslink_Block</class>
            </bluecom_moduslink>
        </blocks>

        <resources>
            <moduslink_setup>
                <setup>
                    <module>Bluecom_Moduslink</module>
                    <class>Bluecom_Moduslink_Model_Resource_Setup</class>
                </setup>
            </moduslink_setup>
        </resources>
    </global>

    <!-- Default value -->
    <default>
        <payment>
            <moduslink>
                <title>Moduslink</title>
                <active>1</active>
                <model>bluecom_moduslink/paymentmethod</model>
                <methods>AMEX,VISA,MASTER,PAYPAL</methods>
            </moduslink>
        </payment>
    </default>
</config>