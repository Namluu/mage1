<?xml version="1.0" encoding="UTF-8"?>
<layout>
    <adminhtml_customer_edit>
        <reference name="left">
            <reference name="customer_edit_tabs">
                <block type="tomblog/adminhtml_customer_edit_tab_tomblog" name="tab_tomblog_main" template="tomblog/customer/main.phtml">
                    <block type="tomblog/adminhtml_customer_edit_tab_tomblog_list" name="tab_blog_list" as="tab_blog_list" />
                </block>
                <action method="addTab">
                    <name>tomblog</name>
                    <block>tab_tomblog_main</block>
                </action>
            </reference>
        </reference>
    </adminhtml_customer_edit>

    <adminhtml_category_index>
        <reference name="content">
            <block type="tomblog/adminhtml_category" name="category"/>
        </reference>
    </adminhtml_category_index>
    <adminhtml_category_edit>
        <reference name="content">
            <block type="tomblog/adminhtml_category_edit" name="category_edit"/>
        </reference>
    </adminhtml_category_edit>
    <adminhtml_category_new>
        <reference name="content">
            <block type="tomblog/adminhtml_category_edit" name="category_new"/>
        </reference>
    </adminhtml_category_new>

    <adminhtml_article_index>
        <reference name="content">
            <block type="tomblog/adminhtml_article" name="article"/>
        </reference>
    </adminhtml_article_index>
    <adminhtml_article_edit>
        <reference name="content">
            <block type="tomblog/adminhtml_article_edit" name="article_edit"/>
        </reference>
    </adminhtml_article_edit>
    <adminhtml_article_new>
        <reference name="content">
            <block type="tomblog/adminhtml_article_edit" name="article_new"/>
        </reference>
    </adminhtml_article_new>
</layout>