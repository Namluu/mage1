                    lang= '<?php echo $lang; ?>',
                    style = 'plain',
                    groupToLangGroup = JSON.parse('<?php echo Mage::helper("core")->jsonEncode($arrPMByGroup) ?>'),
                    isCompressJs = '<?php echo $isTestMode === "1" ? "false" : "true"  ?>',
                    mapG2PT = {
                        'paypal': 'db',
                        'creditcard' : 'pa'
                    };

