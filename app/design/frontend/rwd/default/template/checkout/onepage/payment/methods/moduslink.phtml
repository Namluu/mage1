                        $.getScript( link , function() {
                            /* One form full load. hideLoader */
                            cnp_jQuery(document).on('cnp:ready', function() {
                                loadWidgetScript.isLoaded = true;
                                setTimeout(function() {

                                    hideLoader();

                                    /* Choice the first one */
//                                    jQuery('#co-payment-form dt>input.radio[data-type="moduslink"]').eq(0).trigger('click');
                                }, 10);
                            });
                        });
                    };

                    loadWidgetScript();

                    /* try to re load if moduslink form not response */
                    setTimeout(function() {
                        if(!loadWidgetScript.isLoaded) {
                            if(confirm("<?php echo $this->__('There are a error in checkout process. Do you want to checkout it again.')  ?>")) {
                                window.location.href = "<?php echo Mage::helper('checkout/cart')->getCartUrl(); ?>";
                            }
